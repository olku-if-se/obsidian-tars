{
  "name": "@tars/obsidian-plugin",
  "version": "3.6.0",
  "description": "Tars Obsidian Plugin - AI-powered text generation",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "build": "node esbuild.config.mjs production && pnpm run copy-files",
    "dev": "node esbuild.config.mjs",
    "test": "vitest run",
    "test:watch": "vitest --watch --coverage --ui",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "copy-files": "cp manifest.json dist/ && cp styles.css dist/",
    "clean": "rimraf dist main.js",
    "quality": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run build",
    "knip": "knip"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@google/generative-ai": "^0.24.1",
    "@tars/core": "workspace:*",
    "@tars/mcp": "workspace:*",
    "@tars/providers": "workspace:*",
    "@tars/shared": "workspace:*",
    "@tars/testing": "workspace:*",
    "@tars/types": "workspace:*",
    "axios": "^1.12.2",
    "handlebars": "^4.7.8",
    "jose": "^6.1.0",
    "obsidian": "^1.10.0",
    "ollama": "^0.6.0",
    "openai": "^6.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.1",
    "@types/node": "^24.9.1",
    "builtin-modules": "^5.0.0",
    "esbuild": "^0.25.11",
    "knip": "^5.66.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TarsLab/obsidian-tars.git",
    "directory": "apps/obsidian-plugin"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "ai",
    "assistant",
    "tars"
  ],
  "author": "TarsLab",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.19.0"
}
