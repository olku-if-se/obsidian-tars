{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": false,
    "declaration": false,
    "sourceMap": false,
    "declarationMap": false,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~": ["./src"],
      "src": ["./src"],
      "@tars/types": ["../../packages/types/src"],
      "@tars/shared": ["../../packages/shared/src"],
      "@tars/core": ["../../packages/core/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "main.js",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../../src/**/*"
  ]
}
