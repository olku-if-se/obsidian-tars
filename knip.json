{
  "$schema": "https://raw.githubusercontent.com/webpro/knip/main/packages/knip/schemas/knip-schema.json",
  "entry": [],
  "exclude": ["unlisted", "binaries"],
  "ignoreFiles": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "main.js",
    "*.map",
    ".dependency-cruiser.cjs",
    ".syncpackrc.cjs",
    "vitest.config.ts"
  ],
  "workspaces": {
    "apps/*": {
      "entry": ["src/**/*.ts"],
      "ignore": ["dist/**", "**/*.test.ts", "**/*.spec.ts"]
    },
    "packages/*": {
      "entry": ["src/**/*.ts"],
      "ignore": ["dist/**", "**/*.test.ts", "**/*.spec.ts"]
    },
    "tools/*": {
      "entry": ["src/**/*.ts"],
      "ignore": ["dist/**"]
    }
  }
}
