{
  "name": "@tars/contracts",
  "version": "1.0.0",
  "description": "Contracts and interfaces for Tars plugin and providers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:build": "tsc --noEmit --project tsconfig.build.json",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "quality": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run build",
    "knip": "knip"
  },
  "keywords": ["contracts", "interfaces", "types", "dependency-injection"],
  "author": "Tars",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "dependencies": {
  },
  "peerDependencies": {
    "@needle-di/core": "^1.0.0",
    "obsidian": "^1.0.0"
  },
  "devDependencies": {
    "@needle-di/core": "^1.0.0",
    "@types/node": "^24.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@biomejs/biome": "^2.2.6",
    "obsidian": "^1.0.0",
    "rimraf": "^6.0.1",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}