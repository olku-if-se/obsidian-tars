{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"importHelpers": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2023",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noImplicitAny": true,
		"paths": {
			"@tars/logger": [
				"../logger/src/index.ts"
			],
			"@tars/mcp-hosting": [
				"../mcp-hosting/src/index.ts"
			],
			"@tars/streams": [
				"../streams/src/index.ts"
			],
			"@tars/ui": [
				"../ui/src/index.ts"
			],
			"src/*": [
				"src/*"
			]
		},
		"skipLibCheck": true,
		"strictNullChecks": true,
		"target": "ES6"
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	]
}