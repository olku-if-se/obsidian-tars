{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"],
			"@tars/logger": ["../logger/src/index.ts"],
			"@tars/mcp-hosting": ["../mcp-hosting/src/index.ts"],
			"@tars/streams": ["../streams/src/index.ts"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "NodeNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "nodenext",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7", "ES2023"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
