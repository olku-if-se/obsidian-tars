{
	"name": "@tars/providers",
	"version": "1.0.0",
	"description": "AI provider implementations for TARS",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "vitest run",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest run --coverage",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"quality": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run build",
		"knip": "knip",
		"demo": "tsx src/cli/demo.ts",
		"demo:streaming": "tsx src/cli/streaming-demo.ts"
	},
	"keywords": [
		"ai",
		"providers",
		"llm",
		"tars"
	],
	"author": "C Jack<https://github.com/ae86jack>",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^24.6.1",
		"tsup": "^8.3.5",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"tsx": "^4.20.6"
	},
	"dependencies": {
		"@needle-di/core": "^1.0.0",
		"@tars/contracts": "workspace:*",
		"@tars/logger": "workspace:*",
		"tslib": "^2.8.1",
		"@anthropic-ai/sdk": "^0.24.3",
		"@google/genai": "^1.26.0",
		"openai": "^4.56.2",
		"ollama": "^0.6.0",
		"axios": "^1.8.3",
		"zod": "^3.23.8",
		"jose": "^6.1.0",
		"async-mutex": "^0.5.0",
		"reflect-metadata": "^0.1.13"
	}
}
