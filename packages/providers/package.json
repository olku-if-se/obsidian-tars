{
  "name": "@tars/providers",
  "version": "3.6.0",
  "description": "AI provider implementations for Tars",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/base.js",
      "types": "./dist/base.d.ts"
    },
    "./openai": {
      "import": "./dist/openai.js",
      "types": "./dist/openai.d.ts"
    },
    "./claude": {
      "import": "./dist/claude.js",
      "types": "./dist/claude.d.ts"
    },
    "./demo": {
      "import": "./src/demo/provider-demo.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch --coverage --ui",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "clean": "rimraf dist",
    "quality": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run build",
    "knip": "knip"
  },
  "dependencies": {
    "@tars/types": "workspace:*",
    "@tars/core": "workspace:*",
    "@tars/shared": "workspace:*",
    "@anthropic-ai/sdk": "^0.56.0",
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.8.3",
    "openai": "^5.0.1",
    "ollama": "^0.5.16"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "tsx": "4.20.6",
    "tsup": "8.5.0",
    "typescript": "5.9.3",
    "vitest": "4.0.3",
    "rimraf": "^6.0.1",
    "knip": "^5.66.2"
  },
  "bin": {
    "tars-providers": "./bin/provider-demo.ts"
  },
  "publishConfig": {
    "access": "public"
  }
}
