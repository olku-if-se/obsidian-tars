{
	"compilerOptions": {
		"target": "ES2018",
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": ["ES2018", "DOM"],
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": false,
		"baseUrl": ".",
		"paths": {
			"@tars/contracts": ["../contracts/src/index.ts"],
			"@tars/contracts/*": ["../contracts/src/*"],
			"@tars/logger": ["../logger/src/index.ts"]
		},
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"downlevelIteration": true,
		"importsNotUsedAsValues": "remove",
		"importHelpers": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
