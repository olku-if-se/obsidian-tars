{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "~": ["./src"],
      "src": ["./src"],
      "@tars/types": ["../types/src"],
      "@tars/core": ["../core/src"],
      "@tars/shared": ["../shared/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": [
    { "path": "../types" },
    { "path": "../core" },
    { "path": "../shared" }
  ]
}