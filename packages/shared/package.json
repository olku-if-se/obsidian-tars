{
  "name": "@tars/shared",
  "version": "3.6.0",
  "description": "Shared utilities and helper functions for Tars",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./cli": {
      "import": "./src/cli/utils-cli.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx --watch src/index.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "cli": "tsx src/cli/utils-cli.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tars/types": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "workspace:*",
    "@tars/testing": "workspace:*",
    "tsx": "workspace:*",
    "tsup": "workspace:*",
    "typescript": "workspace:*",
    "vitest": "workspace:*"
  },
  "bin": {
    "tars-shared": "./bin/utils-cli.ts"
  },
  "publishConfig": {
    "access": "public"
  }
}