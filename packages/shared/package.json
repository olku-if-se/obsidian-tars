{
  "name": "@tars/shared",
  "version": "3.6.0",
  "description": "Shared utilities and helper functions for Tars",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch --coverage --ui",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "clean": "rimraf dist",
    "quality": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run build",
    "knip": "knip"
  },
  "dependencies": {
    "@tars/types": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.1",
    "knip": "^5.66.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.19.0"
}
