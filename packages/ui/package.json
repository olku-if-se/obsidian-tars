{
	"name": "@tars/ui",
	"version": "0.1.0",
	"description": "UI components for Obsidian TARS plugin with React and Storybook",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "storybook dev -p 6006",
		"dev:fast": "STORYBOOK_SKIP_DEPENDENCIES=true storybook dev -p 6006 --no-open",
		"test": "vitest",
		"test:watch": "vitest --ui --coverage",
		"test:coverage": "vitest --coverage",
		"build": "tsc && vite build",
		"build:storybook": "storybook build",
		"build:all": "pnpm run build && pnpm run build:storybook",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write . && biome format --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist storybook-static"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"i18next": "^23.7.6",
		"obsidian": "1.10.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-i18next": "^13.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@storybook/addon-a11y": "9.1.10",
		"@storybook/addon-docs": "9.1.10",
		"@storybook/addon-links": "9.1.10",
		"@storybook/addon-viewport": "9.1.10",
		"@storybook/react": "^9.1.10",
		"@storybook/react-vite": "9.1.10",
		"@storybook/test": "9.0.0-alpha.2",
		"@testing-library/jest-dom": "^6.5.0",
		"@testing-library/react": "^14.3.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "^22.0.0",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@vitejs/plugin-react": "^4.3.3",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"storybook": "9.1.10",
		"typescript": "^5.0.0",
		"vite": "^6.3.6",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	}
}
