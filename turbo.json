{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env", "tsconfig.json"],
	"tasks": {
		"build": {
			"dependsOn": ["^build", "typecheck:build"],
			"outputs": ["dist/**", "main.js"],
			"cache": true
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"],
			"cache": true
		},
		"test:coverage": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"],
			"cache": true
		},
		"test:watch": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputs": [],
			"cache": true
		},
		"format": {
			"outputs": [],
			"cache": true
		},
		"check": {
			"dependsOn": ["lint"],
			"outputs": [],
			"cache": true
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"typecheck:build": {
			"outputs": [],
			"cache": true
		},
		"typecheck:tests": {
			"dependsOn": ["typecheck:build"],
			"outputs": [],
			"cache": true
		},
		"clean": {
			"cache": false
		}
	}
}
